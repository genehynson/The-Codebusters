<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buckaroos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/buck"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ui.buckaroos.WelcomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/buck"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ui.buckaroos.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.RegisterSuccess"
            android:label="@string/title_activity_register_success" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.LoginSuccess"
            android:label="@string/title_activity_login_success" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.CreateAccount"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.Transaction"
            android:label="@string/title_activity_transaction" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.AccountOverview"
            android:label="@string/title_activity_account_overview" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.ChangeAccount"
            android:label="@string/title_activity_change_account" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.DateChooser"
            android:label="@string/title_activity_date_chooser" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.Reports"
            android:label="@string/title_activity_reports" >
        </activity>
        <activity
            android:name="com.ui.buckaroos.StartEndDate"
            android:label="@string/title_activity_start_end_date" >
        </activity>
    </application>

</manifest>
